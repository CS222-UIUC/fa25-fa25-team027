[flake8]
# Flake8 configuration for Meeting Minion project
# Following PEP 8 style guide

# Maximum line length
max-line-length = 100

# Maximum cyclomatic complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    model,
    build,
    dist

# Ignore specific error codes
# E203: Whitespace before ':' (conflicts with Black)
# E501: Line too long (handled by Black)
# W503: Line break before binary operator (conflicts with Black)
# E402: Module level import not at top of file (sometimes needed for streamlit)
ignore = E203, E501, W503, E402

# Per-file ignores
per-file-ignores =
    __init__.py:F401

# Show source code for errors
show-source = True

# Show error statistics
statistics = True

# Count errors
count = True
